<odoo noupdate="0">

    <record id="account_operating_unit.ir_rule_invoice_allowed_operating_units" model="ir.rule">
        <field name="model_id" ref="account.model_account_invoice"/>
        <field name="domain_force">[
            '&amp;',
            '|',
            ('operating_unit_id','=',False),
            ('operating_unit_id','in',user.operating_unit_ids.ids),
            '|',
            ('partner_id.operating_unit_ids', '=', False),
            ('partner_id.operating_unit_ids', 'in', user.operating_unit_ids.ids),
            ]
        </field>
        <field name="name">Invoices from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

</odoo>
